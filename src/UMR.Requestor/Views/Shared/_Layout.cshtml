
@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "UMR Requestor";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <nav id="sidebar" class="bg-light p-3 border-end">
            <div class="d-flex align-items-center mb-3">
                <div class="logo-box me-2">UMR</div>
                <div class="fw-bold">Requestor</div>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
                <li class="nav-item"><span class="nav-link small text-uppercase text-muted">Request</span></li>
                <li class="nav-item"><a class="nav-link" href="/Requests/Add">➕ Add Request</a></li>
                <li class="nav-item"><a class="nav-link" href="/Requests/My">🗂️ My Request</a></li>
                <li class="nav-item"><a class="nav-link" href="/Requests/All">📋 All Request</a></li>
                <li class="nav-item"><a class="nav-link" href="#">📊 Reports</a></li>
            </ul>
        </nav>
        <main class="flex-grow-1">
            <header class="border-bottom p-3 d-flex justify-content-end small text-muted">
                <div>Welcome, Mukul</div>
            </header>
            <section class="p-1">
                @RenderBody()
            </section>
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="/js/site.js"></script>
    <script src="/js/requests-table.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

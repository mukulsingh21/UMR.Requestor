
@model IEnumerable<UMR.Requestor.Models.Request>
@{
    ViewData["Title"] = "My Request";
}
<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="fw-semibold">My Request List</div>
        <form method="get" class="d-flex gap-2">
            <input type="text" name="requestor" value="@ViewBag.Requestor" class="form-control" placeholder="Requestor name" />
            <button class="btn btn-success">Search</button>
        </form>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Title/Topic </th>
                    <th>Description</th>
                    <th>Why is this Needed?</th>
                    <th>PIPP</th>
                    <th>User Story</th>
                    <th>IT InstallDate</th>
                    <th>Ownership</th>
                    <th>SME</th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>Priority Ranking</th>
                    <th>Contingency</th>
                    <th>Risk</th>
                    <th>Blue Chip?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@r.ProjectNo</td>
                        <td>@r.ProjectTitle</td>
                        <td>@r.ProjectStatus</td>
                        <td>@r.ImpactedSystem</td>
                        <td>@r.BusinessArea</td>
                        <td>@r.TypeOfRequest</td>
                        <td>@r.CreatedDate.ToLocalTime().ToString("d")</td>
                        <td>
                            <a class="btn btn-sm btn-warning">Update</a>
                            <a class="btn btn-sm btn-info text-white">Add Note</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@model UMR.Requestor.Models.Request
@{
    ViewData["Title"] = "Edit Request";
}
<div class="container mt-4">
    <h2>Edit Request</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="RequestId" />
        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
        <div class="mb-3">
            <label asp-for="ProjectTitle" class="form-label"></label>
            <input asp-for="ProjectTitle" class="form-control" />
            <span asp-validation-for="ProjectTitle" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Reason" class="form-label"></label>
            <textarea asp-for="Reason" class="form-control"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PIPP" class="form-label"></label>
            <input asp-for="PIPP" class="form-control" />
            <span asp-validation-for="PIPP" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserStory" class="form-label"></label>
            <textarea asp-for="UserStory" class="form-control"></textarea>
            <span asp-validation-for="UserStory" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ITInstallDate" class="form-label"></label>
            <input asp-for="ITInstallDate" type="date" class="form-control" />
            <span asp-validation-for="ITInstallDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Ownership" class="form-label"></label>
            <input asp-for="Ownership" class="form-control" />
            <span asp-validation-for="Ownership" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SMEId" class="form-label"></label>
            <input asp-for="SMEId" class="form-control" />
            <span asp-validation-for="SMEId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ProjectStatus" class="form-label"></label>
            <select asp-for="ProjectStatus" class="form-select">
                <option value="New">New</option>
                <option value="PLC_Pending">PLC_Pending</option>
                <option value="IT_Sizing_Complete">IT_Sizing_Complete</option>
                <option value="Completed">Completed</option>
                <option value="Cancelled">Cancelled</option>
            </select>
            <span asp-validation-for="ProjectStatus" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PriorityRanking" class="form-label"></label>
            <input asp-for="PriorityRanking" class="form-control" />
            <span asp-validation-for="PriorityRanking" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Contingency" class="form-label"></label>
            <input asp-for="Contingency" class="form-control" />
            <span asp-validation-for="Contingency" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Risk" class="form-label"></label>
            <input asp-for="Risk" class="form-control" />
            <span asp-validation-for="Risk" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="BlueChip" class="form-label"></label>
            <input asp-for="BlueChip" class="form-control" />
            <span asp-validation-for="BlueChip" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="All" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

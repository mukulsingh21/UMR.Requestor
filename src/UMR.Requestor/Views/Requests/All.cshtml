
@model IEnumerable<UMR.Requestor.Models.Request>
@{
    ViewData["Title"] = "All Request";
}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">All Requests</h5>
    </div>
    <div class="card-body table-responsive">
        <table id="requestsGrid" class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title/Topic </th>
                    <th>Description</th>
                    <th>Why is this Needed?</th>
                    <th>PIPP</th>
                    <th>User Story</th>
                    <th>IT InstallDate</th>
                    <th>Ownership</th>
                    <th>SME</th>
                    <th>Notes</th>
                    <th>Status</th>
                    <th>Priority Ranking</th>
                    <th>Contingency</th>
                    <th>Risk</th>
                    <th>Blue Chip?</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model)
                {
                    <tr>
                        <td class="text-truncate ellipsis-col">@r.RequestId</td>
                        <td class="text-truncate ellipsis-col">@r.ProjectTitle</td>
                        <td class="text-truncate ellipsis-col">@r.Description</td>
                        <td class="text-truncate ellipsis-col">@r.Reason</td>
                        <td class="text-truncate ellipsis-col">@r.PIPP</td>
                        <td class="text-truncate ellipsis-col">@r.UserStory</td>
                        <td class="text-truncate ellipsis-col">@r.ITInstallDate.ToLocalTime().ToString("d")</td>
                        <td class="text-truncate ellipsis-col">@r.Ownership</td>
                        <td class="text-truncate ellipsis-col">@r.SMEId</td>
                        <td class="text-truncate ellipsis-col">@r.Notes</td>
                        <td class="text-truncate ellipsis-col">@r.ProjectStatus</td>
                        <td class="text-truncate ellipsis-col">@r.PriorityRanking</td>
                        <td class="text-truncate ellipsis-col">@r.Contingency</td>
                        <td class="text-truncate ellipsis-col">@r.Risk</td>
                        <td class="text-truncate ellipsis-col">@r.BlueChip</td>
                        <td>
                           @*  <a class="btn btn-sm btn-warning" href="/Requests/Edit/@r.RequestId">Update</a> *@
                            <a class="btn btn-sm btn-warning" asp-controller="Requests" asp-action="Edit" asp-route-id="@r.RequestId" asp-route-returnUrl="@Url.Action("All")">Edit</a>
                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#dataModal" data-request='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(r))'>View Data</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    <!-- Note Modal removed -->
        <!-- Data Modal -->
        <div class="modal fade" id="dataModal" tabindex="-1" aria-labelledby="dataModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="dataModalLabel">Request Data</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="dataModalBody">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            initRequestsGrid();

            $('#dataModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var request = button.data('request');
                var modal = $(this);
                if (request) {
                    var html = '<table class="table table-bordered table-sm">';
                    for (var key in request) {
                        if (request.hasOwnProperty(key)) {
                            html += '<tr><th>' + key + '</th><td>' + request[key] + '</td></tr>';
                        }
                    }
                    html += '</table>';
                    modal.find('#dataModalBody').html(html);
                } else {
                    modal.find('#dataModalBody').text('No data available.');
                }
            });
        });
    </script>
}
